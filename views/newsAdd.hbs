<div class="container">
    <h1 style="font-family: 'Tenor Sans';">Post news</h1>
    <form action="/news/add" method="post">
        <div class="col s12 m6">
            <input placeholder="Image" type="text" name="photo" id="image">
            <label for="image"></label>
        </div>
        <div class="col s12 m6">
            <input placeholder="About" type="text" name="about" id="about">
            <label for="about"></label>
            <input placeholder="Title" type="text" name="title" id="title">
            <label for="title"></label>
            <textarea placeholder="Paragraph" name="paragraph" id="paragraph" cols="30" rows="10" style="height: 100px; border-color: #9e9e9e; border-radius: 3px; outline: none; resize: none; padding: 5px 0 0 5px; font-family: 'Libre Franklin';"></textarea>
            <input placeholder="Author" type="text" name="author" id="author">
            <label for="author"></label>
        </div>
        <button class="adminBtn" type="submit">Post</button>
    </form>
</div>
